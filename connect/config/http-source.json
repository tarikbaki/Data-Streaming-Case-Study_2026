/* Bu config HTTP Source Connector için.
   Admin API’nin /topics endpoint’ini belirli aralıklarla çekip
   gelen veriyi topic-1’e yazması için ayarladım.
   Basit tutmaya çalıştım, plugin ayarları minimum seviyede. */

{
  "name": "http-source-1",
  "config": {
    "connector.class": "io.confluent.connect.http.HttpSourceConnector",
    "tasks.max": "1",

    "http.api.url": "http://OBSERVABILITY_IP:2020/topics",
    "http.method": "GET",
    "poll.interval.ms": "5000",

    "kafka.topic": "topic-1",

    "key.converter": "org.apache.kafka.connect.storage.StringConverter",
    "value.converter": "org.apache.kafka.connect.json.JsonConverter",
    "value.converter.schemas.enable": "false"
  }
}